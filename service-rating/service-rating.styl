#container
	width: 600px
	min-height: 400px
	text-align: center

svg
	outline: 1px solid salmon
	fill:transparent

	path
		transition:
			stroke 600ms ease-out,
			d 300ms cubic-bezier(0.175, 0.885, 0.320, 1.275)
		stroke: inherit

	#head, #face
		pointer-events: none
		stroke: orange

	#head
		stroke-width: 4

	#face
		stroke-width: 2.5
		stroke-linecap: round

	#eye
		transition: opacity 300ms ease-out